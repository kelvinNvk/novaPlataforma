{
  "compilerOptions": {
    // Diretórios
    "rootDir": "./src",
    "outDir": "./dist",

    // Tipos
    "types": ["node", "express"],

    // Aliases
    "baseUrl": "./src",
    "paths": {
      "@prisma": ["prisma"],
      "@config/*": ["config/*"],
      "@modules/*": ["modules/*"]
    },

    // Módulos
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",

    // Bibliotecas
    "lib": ["esnext"],

    // Geração de saída
    "sourceMap": true,
    "declaration": true,

    // Segurança
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Outras configs
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "prisma/seed.ts"],
  "exclude": ["node_modules", "dist"]
}
